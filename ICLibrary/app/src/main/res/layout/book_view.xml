<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:longClickable="false"
    android:minHeight="80dp"
    android:minWidth="80dp"
    android:clickable="true">



    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--android:src="@drawable/hp"-->

    <TextView
        android:id="@+id/booktxt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@+id/bookCover"
        android:layout_toRightOf="@+id/bookCover"
        android:text="Book Title shown here"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/booktxt_Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/booktxt_Title"
        android:layout_alignStart="@+id/booktxt_Title"
        android:layout_below="@+id/booktxt_Title"
        android:text="Author shown here"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/booktxt_Status"
        android:layout_below="@+id/booktxt_Author"
        android:layout_alignLeft="@+id/booktxt_Author"
        android:layout_alignStart="@+id/booktxt_Author" />

</RelativeLayout>